<section class="bg-chat">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col">
        <div class="card card-registration my-4">
          <div class="row g-0">
            <div class="col-xl-6 d-none d-xl-block">
              <%= image_tag("update-profile-image.jpg", class: "img-fluid", style: "display: block; margin: 38% auto 10%;")  %>
              <div class='d-flex justify-content-center mt-5'>
                <p><%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, class: 'btn btn-link btn-lg ms-2', style: 'color: red;', method: :delete %></p>
              </div>
            </div>
            <div class="col-xl-6 h-100">
              <div class="card-body p-md-5 text-black">
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                  <%= render "devise/shared/error_messages", resource: resource %>
                  <div class="d-flex justify-content-center align-items-center">
                    <%= image_tag(resource.avatar_thumbnail) if resource.avatar.attached? %>
                  </div>
                  <div class="form-outline mb-4">
                    <%= f.label 'Profile Image' %>
                    <div class="custom-file">
                      <%= f.file_field :avatar, class:'custom-file-input' %>
                      <label class="custom-file-label" for="validatedCustomFile">Choose Image...</label>
                    </div>
                  </div>

                  <div class="form-outline mb-4">
                    <%= f.label :email %><br />
                    <%= f.email_field :email, class:'form-control form-control-lg', autofocus: true, autocomplete: "email", required: true %>
                  </div>

                  <div class="form-outline mb-4">
                    <%= f.label :username %><br />
                    <%= f.text_field :username, class:'form-control form-control-lg', required: true %>
                  </div>

                  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                  <% end %>

                  <div class="form-outline mb-4">
                    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
                    <%= f.password_field :password, class:'form-control form-control-lg', autocomplete: "new-password" %>
                    <% if @minimum_password_length %>
                      <br />
                      <em><%= @minimum_password_length %> characters minimum</em>
                    <% end %>
                  </div>

                  <div class="form-outline mb-4">
                    <%= f.label :password_confirmation %><br />
                    <%= f.password_field :password_confirmation, class:'form-control form-control-lg', autocomplete: "new-password" %>
                  </div>

                  <div class="form-outline mb-4">
                    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
                    <%= f.password_field :current_password, class:'form-control form-control-lg', autocomplete: "current-password", required: true %>
                  </div>

                  <div class="d-flex justify-content-center pt-3">
                    <%= f.submit "Update", class: 'btn btn-outline-primary btn-lg ms-2' %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
