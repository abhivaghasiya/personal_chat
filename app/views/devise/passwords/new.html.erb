<section class="h-100 bg-chat">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col">
        <div class="card card-registration my-4">
          <div class="row g-0">
            <div class="col-xl-6 d-none d-xl-block">
              <%= image_tag("forgot-password-image.png", class: "img-fluid", style: "display: block; margin: 25% auto;")  %>
            </div>
            <div class="col-xl-6 h-100" style="margin: 15% 0%;">
              <div class="card-body p-md-5 text-black">
                <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
                  <%= render "devise/shared/error_messages", resource: resource %>

                  <div class="form-outline mb-4">
                    <%= f.label :email %><br />
                    <%= f.email_field :email, class:'form-control form-control-lg', autofocus: true, autocomplete: "email", required: true %>
                  </div>

                  <div class="d-flex justify-content-center pt-3">
                    <%= f.submit "Send me reset password instructions", class: 'btn btn-outline-primary btn-lg ms-2' %>
                  </div>
                <% end %>
                <div class='d-flex justify-content-center mt-5'>
                  <%= link_to "Create an account!", new_registration_path(resource_name), style:'color: black !important;' %>
                </div>
                <div class='d-flex justify-content-center'>
                  <%= link_to "I am already member", new_session_path(resource_name), style: 'color: black !important' %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
